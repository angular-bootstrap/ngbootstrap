{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "ngbootstrap": ["src/index.ts"],
      "ngbootstrap/datagrid": ["./src/datagrid/index.ts"],
      "ngbootstrap/drag-drop": ["./src/drag-drop/index.ts"],
      "ngbootstrap/pagination": ["./src/pagination/index.ts"],
      "ngbootstrap/splitter": ["./src/splitter/index.ts"],
      "ngbootstrap/typeahead": ["./src/typeahead/index.ts"],
      "ngbootstrap/tree": ["./src/tree/index.ts"]
    }
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "typeCheckHostBindings": true,
    "strictTemplates": true
  },
  "files": [],
  "include": [],
  "references": [
    {
      "path": "./tsconfig.lib.json"
    },
    {
      "path": "./tsconfig.spec.json"
    }
  ]
}
